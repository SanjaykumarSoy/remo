#include <stdio.h>
void square(int );
int main() {
    int num=5;
    printf(" before calling function=%d\n",num);
    square(num);
    printf("after calling function=%d\n", num);
    
    return 0;
}
void square( int x){
    x=x*x;
  printf("inside the function =%d\n",x);
}
SWAP
#include <stdio.h>
void swap(int, int );
int main() {
    int a=5;
    int b=152;
    printf(" before calling function\n a=%d\n b=%d\n",a,b);
    swap(a,b);
    printf("after calling function\n a=%d\n b=%d\n", a,b);
    
    return 0;
}
void swap( int x, int y){
    int temp;
    temp=x;
    x=y;
    y=temp;
  printf("inside the function\n a =%d\n b=%d\n",x,y);
}
